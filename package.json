{
  "name": "sveltekit-adapter-aws-pulumi",
  "description": "SvelteKit adapter for deploying to AWS using Pulumi.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Data-Only-Greater/sveltekit-adapter-aws-pulumi.git"
  },
  "bugs": {
    "url": "https://github.com/Data-Only-Greater/sveltekit-adapter-aws-pulumi/issues"
  },
  "homepage": "https://github.com/Data-Only-Greater/sveltekit-adapter-aws-pulumi#readme",
  "license": "MIT",
  "keywords": [
    "sveltekit",
    "adapter",
    "aws",
    "pulumi"
  ],
  "author": "Mathew Topper <damm_horse@yahoo.co.uk>",
  "version": "0.0.0-semantic-release",
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "types": "./index.d.ts",
  "bin": {
    "destroy": "./bin/destroy.js"
  },
  "scripts": {
    "build": "yarn clean && tsc --project tsconfig.build.json && yarn copy-files",
    "watch": "tsc -w --excludeFiles test",
    "format": "prettier --write .",
    "test": "vitest",
    "clean": "rimraf dist",
    "copy-files": "copyfiles pulumi/** package.json README.md LICENSE dist",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/folder-hash": "^4.0.2",
    "@types/lodash": "^4.14.191",
    "@types/mime": "^3.0.1",
    "@types/minimist": "^1.2.2",
    "@types/node": "18.14.0",
    "@vitest/coverage-c8": "^0.29.8",
    "copyfiles": "^2.4.1",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.1",
    "typescript": "^4.9.5",
    "vitest": "^0.29.7"
  },
  "dependencies": {
    "@pulumi/aws": "^5.0.0",
    "@pulumi/command": "^0.7.1",
    "@pulumi/pulumi": "^3.0.0",
    "dotenv": "^16.0.3",
    "minimist": "^1.2.8",
    "sveltekit-adapter-aws-base": "^1.2.0",
    "folder-hash": "^4.0.4",
    "lodash": "^4.17.21"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ],
          "message": "chore(release): set `package.json` to ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
